pipeline {
  agent { label 'linux' }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('raydebillion')
  }
  stages {
    stage('gitclone') {

			steps {
				git 'https://github.com/raymondogbe/Landing-Page-React.git'
			}
		}
    stage('Build Docker Image') {
            steps {
                // Build the Docker image from Dockerfile
              sh 'docker build -t  erplyapp .'
            }
        }
    stage('Run Docker Container') {
            steps {
                // Run the Docker container from the built image
              sh "docker run -dit -p 80:80 --name erply_app erplyapp"
                }
            }
    stage('Docker Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Docker Tag Image') {
      steps {
        sh 'docker tag myreact_app4 raydebillion/erplyapp:latest'
      }
    }
    stage('Docker Push') {
      steps {
        sh 'docker push raydebillion/erplyapp:latest'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
